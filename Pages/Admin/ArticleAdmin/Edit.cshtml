@page
@model JobForum3._0.Pages.Admin.ArticleAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Article</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Article.Id" />
            <div class="form-group">
                <label asp-for="Article.Header" class="control-label"></label>
                <input asp-for="Article.Header" class="form-control" />
                <span asp-validation-for="Article.Header" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Author" class="control-label"></label>
                <input asp-for="Article.Author" class="form-control" />
                <span asp-validation-for="Article.Author" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.Description" class="control-label"></label>
                <input asp-for="Article.Description" class="form-control" />
                <span asp-validation-for="Article.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.DatePosted" class="control-label"></label>
                <input asp-for="Article.DatePosted" class="form-control" />
                <span asp-validation-for="Article.DatePosted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Article.FileUpload" class="control-label"></label>
                <input asp-for="Article.FileUpload" class="form-control" />
                <span asp-validation-for="Article.FileUpload" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
